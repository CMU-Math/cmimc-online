container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py createsu"
    leader_only: true
  03_bgtasks:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py process_tasks &"
  04_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput --clear"
option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: cmimc.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: staticfiles
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: cmimc.settings
    "PYTHONPATH": "/var/app/current/cmimc:$PYTHONPATH"

